<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UI1" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/design_default_color_secondary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/design_default_color_secondary_variant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarTabStyle">@color/design_default_color_secondary</item>
    </style>
    <style name="ThemeNoActionBar" parent="Theme.UI1">
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.UI1.Transparent">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
</style>
</resources>